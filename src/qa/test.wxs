<Wix xmlns='http://schemas.microsoft.com/wix/2006/wi'
    xmlns:netfx="http://schemas.microsoft.com/wix/NetFxExtension"
    >

    <?define CurrentMajorVersion = '255' ?>
    <?define CurrentMinorVersion = '0' ?>
    <?define CurrentMicroVersion = '0' ?>
    <?define CurrentBuildVersion = '1' ?>
    <?define CurrentToolsHotfix  = '1' ?>

     <?if $(var.arch)=x64 ?>
      <?define UpgradeCode = '48e5492c-6843-452e-97a2-a5fe2d24b141' ?>
      <?define ProductId = '*' ?>
    <?else?>
      <?define UpgradeCode = 'EE3B949D-C431-462b-B6DC-5BEDA078D772' ?>
      <?define ProductId = '*' ?>
    <?endif?>

  <Product Name='Test' Id='$(var.ProductId)'
           Language='1033' Codepage='1252' Version='$(var.CurrentMajorVersion).$(var.CurrentMinorVersion).$(var.CurrentBuildVersion)' Manufacturer='Noone'
           UpgradeCode='$(var.UpgradeCode)' >
    <Package Id='*'  Description='Test'
             Comments='Installs Test' 
             InstallerVersion='200' Languages='1033' Compressed='yes'
             InstallScope='perMachine'
             InstallPrivileges="elevated"
             Platform='$(var.arch)'
             SummaryCodepage='1252' />

    <MajorUpgrade
            AllowDowngrades="yes" />

    <Upgrade Id='$(var.UpgradeCode)'>
        <UpgradeVersion Minimum='$(var.CurrentMajorVersion).$(var.CurrentMinorVersion).$(var.CurrentBuildVersion)'
                        IncludeMinimum='no'
                        OnlyDetect='yes'
                        Property='UPGRADINGNEWERVERSION' />
    </Upgrade>

    <Media Id='1' Cabinet='ManagementAgentInstaller.cab' EmbedCab='yes' />
    <Directory Id='TARGETDIR' Name='SourceDir'>
        <Component Id="TestCom" Guid="*">
            <RegistryKey Root="HKLM"
                Key='SOFTWARE\Citrix\XenTools\Test'>
                <RegistryValue Type='string' Name='Test' Value='1' />
            </RegistryKey>

        </Component>
    </Directory>

    <Feature Id='Complete' Level='1'>
        <ComponentRef Id="TestCom" />
    </Feature>

  </Product>


</Wix>
